{
  "manifest_version": 3,
  "name": "YouTube Summarizer with ChatGPT",
  "version": "1.0",
  "description": "Summarize YouTube videos using ChatGPT",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "*://*.youtube.com/*",
    "*://chatgpt.com/*",
    "*://chat.openai.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["youtube_content.js"],
      "css": ["styles.css"]
    },
    {
      "matches": ["*://chatgpt.com/*", "*://chat.openai.com/*"],
      "js": ["chatgpt_content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["injected_script.js"],
      "matches": ["*://*.youtube.com/*"]
    }
  ],
  "action": {
    "default_title": "YouTube Summarizer"
  }
}
